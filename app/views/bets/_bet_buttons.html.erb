<%= simple_form_for([@bet, @bet.memberships.build]) do |f| %>
  <% f.hidden_field :accepted, accepted: false %>
  <%= f.button :submit, "Agree!", class: "btn btn-default" %>
<% end %>

<%= simple_form_for([@bet, @bet.memberships.build]) do |f| %>
  <%= f.hidden_field :accepted, accepted: true %>
  <%= f.button :submit, "Against!", class: "btn btn-default" %>
<% end %>